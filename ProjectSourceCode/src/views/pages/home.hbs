<div class="bg-container">
  <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 bg-light p-4 rounded shadow">
                <h1 align="center">Welcome, {{username}}!</h1>

                <div class="row">

                  <div id="restaurants" class="container">
                    <div class="col">
                      {{#each restaurants}}
                      <div class="card" style="width: 25rem;" id="hobby-card-1">
                        <img src="{{this.image_url}}" alt="this.name" class="card-img-top">
                        <div class="card-body">
                          <h5 class="card-title">{{this.name}}</h5>
                          <p class="card-text"><strong>Rating:</strong> {{this.rating}}</p>
                        </div>
                      </div>
                      {{/each}}
                    </div>
                  </div>
                </div>
              </div>
          </div>
    </div>
</div>
